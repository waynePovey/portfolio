{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["app/common/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@scenes/*": ["app/scenes/*"],
      "@models/*": ["app/models/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
